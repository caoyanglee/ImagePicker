<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weimu.library">

    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 存储权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.weimu.library.view.ImageSelectorActivity"
            android:theme="@style/BasePageTheme" />
        <activity
            android:name="com.weimu.library.view.ImagePreviewActivity"
            android:theme="@style/MainAppTheme" />
        <activity
            android:name="com.weimu.library.view.ImageCropActivity"
            android:theme="@style/MainAppTheme" />

        <activity android:name="com.weimu.library.view.CameraSelectorActivity" />
    </application>

</manifest>